<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10">

    <RelativeLayout
        android:id="@+id/label_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:background="@drawable/co_btn_d"
        android:paddingHorizontal="@dimen/dp_10">

        <TextView
            android:layout_width="170dp"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:background="@drawable/black_bg"
            android:gravity="center"
            android:text="Khách tiềm năng"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/txt_customer1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:text="@string/string_customers"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_quantity_customer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_customer1"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/label_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_below="@id/label_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/co_btn_d"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">

        <TextView
            android:id="@+id/txt_customer2"
            android:layout_width="160dp"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:background="@drawable/pink_bg"
            android:gravity="center"
            android:text="Chưa giao dịch"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:text="@string/string_customers"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_quantity_customer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_customer2"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/label_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_below="@id/label_2"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/co_btn_d"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">

        <TextView
            android:layout_width="140dp"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:background="@drawable/green_bg"
            android:gravity="center"
            android:text="Có hợp đồng"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/txt_customer3"

            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:text="@string/string_customers"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_quantity_customer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_customer3"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/label_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_below="@id/label_3"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/co_btn_d"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">

        <TextView
            android:layout_width="140dp"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_bg"
            android:gravity="center"
            android:text="Đã giao dịch"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/txt_customer4"

            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:text="@string/string_customers"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_quantity_customer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_customer4"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/label_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:layout_below="@id/label_4"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/co_btn_d"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/dp_10">

        <TextView
            android:layout_width="130dp"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:background="@drawable/orange_bg"
            android:gravity="center"
            android:text="Khách quen"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/txt_customer5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:text="@string/string_customers"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_quantity_customer5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txt_customer5"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>