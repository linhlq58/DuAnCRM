<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/tasks" />

    <TextView
        android:id="@+id/txt_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_task"
        android:layout_centerHorizontal="true"
        android:text="Hiện bạn chưa có nhiệm vụ nào"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_lab1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_lab"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Hãy liên hệ với người quản lý của bạn để nận nhiệm vụ mới!\n Chúc một ngày làm việc hiệu quả!"
        android:textSize="20sp" />
</RelativeLayout>